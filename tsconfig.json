{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      // "vite/client"
      "webpack-env",
      "element-plus/global"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@vue3/*": ["vue3-web/src/*"],
      "@react/*": ["react-web/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["vue3-web/**.ts", "vue3-web/src/**.ts"],
  "exclude": ["node_modules"]
}
