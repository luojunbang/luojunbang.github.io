{
  "name": "luojunbang.github.io",
  "version": "0.1.0",
  "packageManager": "pnpm@7.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "vue": "pnpm run -C ./apps/web-vue3 dev",
    "react": "pnpm run -C ./apps/web-react dev",
    "serve": "serve ./dist -l 10888",
    "dev": "pnpm run --filter @lo/web-* dev",
    "build:react": "rimraf ./dist/react-page && pnpm run -C ./apps/web-react build && mv ./apps/web-react/build ./dist/react-page",
    "build:vue": "rimraf ./dist/vue-page && pnpm run -C ./apps/web-vue build && mv ./apps/web-vue3/dist ./dist/vue-page",
    "build": "rimraf ./dist && pnpm run --filter @lo/web-* build && pnpm place",
    "place": "mv ./apps/main/out ./dist && mv ./apps/web-vue3/dist ./dist/vue-page && mv ./apps/web-react/build ./dist/react-page"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "lo-utils": "^1.2.27"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "serve": "^14.2.0",
    "webpack-cli": "^5.1.4"
  }
}
